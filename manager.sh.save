#!/bin/bash
clear

# Function to simulate typing effect
type_text() {
  local text="$1"
  for ((i=0; i<${#text}; i++)); do
    echo -n "${text:$i:1}"
    sleep 0.05  # Adjust speed here
  done
  echo
}

# Colors
BLUE="\033[1;34m"
GREEN="\033[1;32m"
RESET="\033[0m"

# Animated Title
echo -e "${BLUE}=======================================${RESET}"
echo -ne "${GREEN}"
type_text "     Mobile Farm Node Manager"
echo -e "${BLUE}=======================================${RESET}"

